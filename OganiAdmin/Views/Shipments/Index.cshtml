@using OganiAdmin.Models;
@using X.PagedList.Mvc.Core;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model X.PagedList.IPagedList<Shipment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<div class="col-12 ">
    <div class="bg-light rounded h-100 p-4 vh-100">
        <h3 class="mb-4">Shipments</h3>
        <a asp-action="Create" class="btn btn-primary">+ Add new shipment</a>
        <div class="row">
           
        <table class="table">
            <p class="text-danger my-2">@TempData["Message"]</p>
            <thead>
                <tr>
                    <th>
                        Ship Date
                    </th>
                    <th>
                        Ship Address
                    </th>
                    <th>
                        Ship Phone
                    </th>
                    <th>
                        Ship Note
                    </th>
                    <th>
                        Ship Price
                    </th>
                    <th>
                        Ship Method
                    </th>
                    <th>
                        Ship State
                    </th>
                    <th>
                        Ship Code
                    </th>
                    <th>
                        Customer ID
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipNote)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipMethod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipState)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cus.CusId)
                        </td>
                        <td>
                                <a asp-action="Edit" asp-route-id="@item.ShipId" class="me-4">

                                    <i class="fa-solid fa-arrows-rotate"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ShipId">
                                    <i class="fa-solid fa-trash-can" style="width: 24px; height: 24px"></i>
                                </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <div class=" col-12 text-center">
            <nav aria-label="Page navigation example ">
                <ul class="pagination justify-content-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                             new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
                </ul>
            </nav>
        </div>
    </div>
</div>


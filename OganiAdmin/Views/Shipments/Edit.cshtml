@model OganiAdmin.Models.Shipment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<div class="col-12 ">
    <div class="bg-light rounded h-100 p-4 vh-100">
        <div class="row ml-3">
                <div class="col-md-4">
                    <form asp-action="Edit" class="row gy-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ShipId" />
                        <div class="form-group">
                            <label asp-for="ShipDate" class="control-label">Ship Date</label>
                            <input asp-for="ShipDate" class="form-control" />
                            <span asp-validation-for="ShipDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipAddress" class="control-label">Ship Address</label>
                            <input asp-for="ShipAddress" class="form-control" />
                            <span asp-validation-for="ShipAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipPhone" class="control-label">Ship Phone</label>
                            <input asp-for="ShipPhone" class="form-control" />
                            <span asp-validation-for="ShipPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipNote" class="control-label">Ship Note</label>
                            <input asp-for="ShipNote" class="form-control" />
                            <span asp-validation-for="ShipNote" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipPrice" class="control-label">Ship Price</label>
                            <input asp-for="ShipPrice" class="form-control" />
                            <span asp-validation-for="ShipPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipMethod" class="control-label">Ship Method</label>
                            <input asp-for="ShipMethod" class="form-control" />
                            <span asp-validation-for="ShipMethod" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipState" class="control-label">Ship State</label>
                            <input asp-for="ShipState" class="form-control" />
                            <span asp-validation-for="ShipState" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShipCode" class="control-label">Ship Code</label>
                            <input asp-for="ShipCode" class="form-control" />
                            <span asp-validation-for="ShipCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CusId" class="control-label">Customer ID</label>
                            <select asp-for="CusId" class="form-control" asp-items="ViewBag.CusId"></select>
                            <span asp-validation-for="CusId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            </div>

           
    </div>
</div>



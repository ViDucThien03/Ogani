@model OganiAdmin.Models.Customer
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "InsertCustomer";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

<div class="col-12 ">
    <div class="bg-light rounded h-100 p-4 vh-100">
        <div class="row m-lg-4">
        <h3 class="mb-4">Create New Customer</h3>
            <div class="col-md-4">
                <form asp-action="InsertCustomer" class="row gy-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CusName" class="control-label">Customer name</label>
                        <input asp-for="CusName" class="form-control" />
                        <span asp-validation-for="CusName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CusEmail" class="control-label">Customer email</label>
                        <input asp-for="CusEmail" class="form-control" />
                        <span asp-validation-for="CusEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CusPassword" class="control-label">Password</label>
                        <input asp-for="CusPassword" class="form-control" />
                        <span asp-validation-for="CusPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CusAddress" class="control-label">Address</label>
                        <input asp-for="CusAddress" class="form-control" />
                        <span asp-validation-for="CusAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CusPhone" class="control-label">Phone</label>
                        <input asp-for="CusPhone" class="form-control" />
                        <span asp-validation-for="CusPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div>
                <a asp-action="Customers">Back to List</a>
            </div>
        </div>
        </div>
     </div>
</div>
   
